{
  "name": "cppgrad-dev",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "args": {
      "IS_DEVCONTAINER": "ON",               // Skip Dockerfile build (dont change this)
      "BUILD_TYPE": "Release",               // CMake build type
      "USE_PREBUILT_ARRAYFIRE": "OFF",       // Use third_party/arrayfire
      "AF_BACKEND": "cpu"                    // Backend: cpu | cuda | metal
    }
  },
  "workspaceFolder": "/cppgrad",
  "customizations": {
    "jetbrains": {
      "backend": "CLion"
    },
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "cmake.configureOnOpen": false, // We'll handle config manually below
        "cmake.buildDirectory": "${workspaceFolder}/build",
        "cmake.buildType": "Release"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/cppgrad,type=bind"
  ],
  "postCreateCommand": "bash .devcontainer/post_create.sh ${BUILD_TYPE} ${USE_PREBUILT_ARRAYFIRE} ${AF_BACKEND}"
}